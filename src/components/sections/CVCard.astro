---
import { File } from 'lucide-react'
import Card from '../Card.astro'
import { buttonVariants } from '@/components/ui/button'
import { LINKS } from '@/lib/constants'
---

<Card colSpan="md:col-span-1" rowSpan="md:row-span-1" title="cv">
  <div class="mt-4 flex w-full justify-center">
    <div
      class="card card-compact md:w-112 lg:w-128 w-96 gap-2 border-[oklch(var(--p))] transition-all"
    >
      <div class="mt-4 flex flex-col gap-2">
        <p class="text-sm text-muted-foreground">
          Download my resume by clicking on the button below
        </p>
        <div class="card-actions mt-2 flex w-full items-center justify-center">
          <a
            href={`/${LINKS.cv}`}
            class={buttonVariants({ variant: 'default' })}
          >
            Download resume
            <File />
          </a>
        </div>
      </div>
    </div>
  </div>
</Card>
